<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="600" prefWidth="900" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gol.Controller">
    <children>
      <BorderPane prefHeight="242.0" prefWidth="320.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <right>
            <VBox style="-fx-background-color: #F0F0F0;" BorderPane.alignment="CENTER">
               <children>
                  <Label fx:id="title" alignment="CENTER" contentDisplay="CENTER" textFill="#c61313">
                     <font>
                        <Font size="25.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="20.0" left="40.0" right="10.0" top="30.0" />
                     </VBox.margin>
                     <graphic>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@logo.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Label>
                  <Label text="INFORMATIONS">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </Label>
                  <GridPane>
                    <columnConstraints>
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                      <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    </columnConstraints>
                    <rowConstraints>
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                      <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    </rowConstraints>
                     <children>
                        <Label text="GENERATION" />
                        <Label text="POPULATION" GridPane.rowIndex="1" />
                        <Label fx:id="l_generation" text="0" GridPane.columnIndex="1" />
                        <Label fx:id="l_population" text="0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                     </children>
                     <padding>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </GridPane>
                  <HBox spacing="5.0">
                     <children>
                        <Button fx:id="b_update" mnemonicParsing="false" onAction="#handleUpdate" text="Update" />
                     </children>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" />
                     </VBox.margin>
                  </HBox>
                  <Separator prefWidth="200.0">
                     <padding>
                        <Insets left="10.0" right="10.0" />
                     </padding>
                  </Separator>
                  <Label text="PARAMETRES">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" top="10.0" />
                     </padding>
                  </Label>
                  <Label text="Pourcentage de remplissage random">
                     <VBox.margin>
                        <Insets left="10.0" />
                     </VBox.margin>
                  </Label>
                  <Slider fx:id="s_random" prefHeight="14.0" prefWidth="196.0">
                     <VBox.margin>
                        <Insets bottom="10.0" top="5.0" />
                     </VBox.margin>
                  </Slider>
                  <HBox spacing="5.0">
                     <children>
                        <Button mnemonicParsing="false" onAction="#handleRandom" text="Random" />
                        <Label fx:id="l_percent" text="0%">
                           <HBox.margin>
                              <Insets top="5.0" />
                           </HBox.margin>
                        </Label>
                        <Separator orientation="VERTICAL" />
                        <Button fx:id="b_load" mnemonicParsing="false" onAction="#handleLoad" text="Load" />
                        <Button fx:id="b_save" mnemonicParsing="false" onAction="#handleSave" text="Save" />
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </HBox>
                  <Separator prefWidth="200.0">
                     <padding>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Separator>
                  <Label text="GAME">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" top="10.0" />
                     </padding>
                  </Label>
                  <HBox spacing="5.0">
                     <children>
                        <Button fx:id="b_start" mnemonicParsing="false" onAction="#handleRun" text="Start" />
                        <Button fx:id="b_stop" mnemonicParsing="false" onAction="#handleStop" text="Stop" />
                        <Button fx:id="b_step" mnemonicParsing="false" onAction="#handleStep" text="Step" />
                        <Button fx:id="b_clear" mnemonicParsing="false" onAction="#handleClear" text="Clear" />
                     </children>
                     <padding>
                        <Insets left="10.0" />
                     </padding>
                  </HBox>
                  <Separator prefWidth="200.0">
                     <padding>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </Separator>
                  <Label text="AUTRE">
                     <font>
                        <Font name="System Bold" size="12.0" />
                     </font>
                     <padding>
                        <Insets left="10.0" top="10.0" />
                     </padding>
                  </Label>
                  <TextArea editable="false" focusTraversable="false" prefHeight="122.0" prefWidth="220.0" text="- Si la cellule est VIVANTE alors elle&#10;se maintient en vie si elle a 2 ou 3&#10;voisins sinon elle meurt.&#10;- Si la cellule est MORTE alors nait si&#10;elle a exactement 3 voisins sinon&#10;elle reste morte." />
               </children>
               <BorderPane.margin>
                  <Insets />
               </BorderPane.margin>
               <padding>
                  <Insets left="10.0" right="10.0" />
               </padding>
            </VBox>
         </right>
         <center>
            <BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #FFCDD2;" BorderPane.alignment="CENTER">
               <center>
                  <StackPane fx:id="pane" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </center>
      </BorderPane>
    </children>
</AnchorPane>
